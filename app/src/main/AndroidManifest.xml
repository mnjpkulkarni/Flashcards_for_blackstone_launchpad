<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mnjpk.flashcards.flashcards">

    <application
        android:name=".FlashcardsApplication"
        android:allowBackup="true"
        android:icon="@drawable/blackstone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FinanceActivity" />
        <activity
            android:name=".CardView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddCardActivity" />
        <activity android:name=".FinalActivity"></activity>
    </application>

</manifest>